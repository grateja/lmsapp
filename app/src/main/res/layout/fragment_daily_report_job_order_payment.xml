<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.daily_report.job_order_paid.DailyReportJobOrderPaymentFragment">
    <data>
        <variable
            name="viewModel"
            type="com.vag.lmsapp.app.reports.daily_report.DailyReportViewModel" />
    </data>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="@color/secondary_background"
            android:visibility="@{viewModel.jobOrderPayment.isEmpty()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No job orders were paid!"
                android:layout_margin="20dp"
                android:gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:visibility="@{!viewModel.jobOrderPayment.isEmpty()}"
            android:id="@+id/card_container"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/icon_daily_report_job_order"/>
                <TextView
                    android:id="@+id/text_top_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12 Job Orders Created"
                    app:layout_constraintTop_toTopOf="@id/icon"
                    app:layout_constraintStart_toEndOf="@id/icon"
                    android:layout_marginStart="12dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_text_heading"
                    android:layout_marginVertical="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CardSpan"
                    app:layout_constraintTop_toBottomOf="@id/text_top_caption"
                    app:layout_constraintStart_toEndOf="@id/icon"
                    android:layout_marginStart="4dp">
                    <TextView
                        style="@style/TileTitle"
                        android:textColor="@color/primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="P20,030"
                        android:peso="@{viewModel.jobOrderPaymentSummary.totalAmount}"/>
                </com.google.android.material.card.MaterialCardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_payments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/card_text_heading"
                    app:layout_constraintStart_toStartOf="@id/card_text_heading"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="18dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>