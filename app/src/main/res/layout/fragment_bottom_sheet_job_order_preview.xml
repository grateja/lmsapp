<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.joborders.preview.JobOrderPreviewBottomSheetFragment">
    <data>
        <variable
            name="viewModel"
            type="com.vag.lmsapp.app.joborders.preview.JobOrderPreviewViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/background_gradient_secondary"
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fragment_title"
                style="@style/TextTitleFragment"
                android:layout_marginHorizontal="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`JO#: ` + viewModel.jobOrder.jobOrder.jobOrderNumber}"
                tools:text="JO#: 102391"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_margin="6dp"
                android:id="@+id/button_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_close"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:background="@drawable/background_selector"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/fragment_title"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/title_divider"
                app:layout_constraintBottom_toTopOf="@id/controls">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp">
                        <TableRow
                            style="@style/DefinitionTermRow">
                            <TextView android:text="Customer name:"/>
                            <TextView android:text="@{viewModel.jobOrder.customer.name}"
                                tools:text="Tony Stark"/>
                        </TableRow>
                        <TableRow
                            style="@style/DefinitionTermRow">
                            <TextView android:text="Date created:"/>
                            <TextView android:text="@{viewModel.jobOrder.jobOrder.createdAt}"
                                tools:text="Jan 1, 2024"/>
                        </TableRow>
                    </TableLayout>
                    <TextView
                        android:visibility="@{viewModel.jobOrder.services.size() > 0}"
                        style="@style/CardTitle"
                        android:text="SERVICES"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"/>
                    <com.google.android.material.card.MaterialCardView
                        android:visibility="@{viewModel.jobOrder.services.size() > 0}"
                        style="@style/RoundCard.NoElevation"
                        app:contentPadding="16dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        style="@style/CardTitle"
                        android:visibility="@{viewModel.jobOrder.products.size() > 0}"
                        android:text="PRODUCTS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"/>
                    <com.google.android.material.card.MaterialCardView
                        style="@style/RoundCard.NoElevation"
                        android:visibility="@{viewModel.jobOrder.products.size() > 0}"
                        app:contentPadding="16dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginBottom="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        style="@style/CardTitle"
                        android:visibility="@{viewModel.jobOrder.extras.size() > 0}"
                        android:text="EXTRAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"/>
                    <com.google.android.material.card.MaterialCardView
                        style="@style/RoundCard.NoElevation"
                        android:visibility="@{viewModel.jobOrder.extras.size() > 0}"
                        app:contentPadding="16dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginBottom="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_extras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:visibility="@{viewModel.jobOrder.deliveryCharge != null}"
                        style="@style/RoundCard.NoElevation"
                        android:layout_marginHorizontal="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:gravity="center|start">
                            <ImageView
                                app:imageResource="@{viewModel.jobOrder.deliveryCharge.vehicle.icon}"
                                tools:src="@drawable/icon_delivery_motorcycle"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:contentDescription="Delivery vehicle"/>
                            <TextView
                                android:layout_marginHorizontal="18dp"
                                android:layout_weight="1"
                                tools:text="Motorcycle"
                                android:text="@{viewModel.jobOrder.deliveryCharge.vehicle.toString()}"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:peso="@{viewModel.jobOrder.deliveryCharge.price}"
                                tools:text="P40.0"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary"
                        style="@style/CardTitle"
                        android:layout_marginHorizontal="18dp"/>
                    <com.google.android.material.card.MaterialCardView
                        style="@style/RoundCard.NoElevation"
                        android:layout_marginHorizontal="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableLayout
                            android:layout_margin="12dp"
                            style="@style/Caption.Definition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:layout_marginVertical="8dp">
                                <TextView
                                    android:text="SUBTOTAL"
                                    android:layout_weight="1"/>
                                <TextView
                                    style="@style/Bold"
                                    android:textAlignment="textEnd"
                                    android:peso="@{viewModel.jobOrder.subtotal()}"
                                    tools:text="P10.10"/>
                            </TableRow>
                            <TableRow
                                android:visibility="@{viewModel.jobOrder.discount != null}"
                                android:layout_marginVertical="8dp">
                                <TextView
                                    android:text="@{viewModel.jobOrder.discount.name}"
                                    android:layout_weight="1"
                                    tools:text="Opening Discount (10%)"/>
                                <TextView
                                    style="@style/Bold"
                                    android:textAlignment="textEnd"
                                    android:peso="@{-viewModel.jobOrder.discountInPeso()}"
                                    tools:text="P10.10"/>
                            </TableRow>
                            <TableRow
                                android:visibility="@{viewModel.jobOrder.discount != null}"
                                android:layout_marginVertical="8dp">
                                <TextView
                                    android:text="Discounted amount"
                                    android:layout_weight="1"/>
                                <TextView
                                    style="@style/Bold"
                                    android:textAlignment="textEnd"
                                    android:peso="@{viewModel.jobOrder.discountedAmount()}"
                                    tools:text="P10.10"/>
                            </TableRow>
                            <TableRow
                                android:layout_marginVertical="8dp">
                                <TextView
                                    android:text="Current amount due"
                                    android:layout_weight="1"
                                    style="@style/TextItemTitle.Medium.Bold"/>
                                <TextView
                                    android:textAlignment="textEnd"
                                    android:peso="@{viewModel.jobOrder.discountedAmount()}"
                                    tools:text="P10.10"
                                    style="@style/TextItemTitle.Medium.Bold"/>
                            </TableRow>
                        </TableLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="18dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_edit"
                    style="@style/ButtonCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="6dp"
                        android:divider="@drawable/divider_10"
                        android:showDividers="middle">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_edit"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_payment"
                    style="@style/ButtonCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="6dp"
                        android:divider="@drawable/divider_10"
                        android:showDividers="middle">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_payment"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_print"
                    style="@style/ButtonCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="6dp"
                        android:divider="@drawable/divider_10"
                        android:showDividers="middle">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_print"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/print"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_delete"
                    style="@style/ButtonCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="6dp"
                        android:divider="@drawable/divider_10"
                        android:showDividers="middle">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_delete"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delete"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>