<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".app.app_settings.user.preview.UserAccountPreviewActivity">
    <data>
        <variable
            name="viewModel"
            type="com.vag.lmsapp.app.app_settings.user.preview.UserAccountPreviewViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@drawable/background_gradient_primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <TextView
                    style="@style/CardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT INFORMATION"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_account_information"
                    style="@style/RoundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/incl_settings_params"
                            android:id="@+id/param_name"
                            app:label="@{`Name`}"
                            app:value="@{viewModel.user.user.name}"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <include layout="@layout/incl_settings_params"
                            android:id="@+id/param_contact_number"
                            app:label="@{`Contact number`}"
                            app:value="@{viewModel.user.user.contactNumber}"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <include layout="@layout/incl_settings_params"
                            android:id="@+id/param_email"
                            app:label="@{`Email`}"
                            app:value="@{viewModel.user.user.email}"/>
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    style="@style/CardTitle"
                    android:text="PERMISSIONS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_permissions"
                    style="@style/RoundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/recycler_view_permissions"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:visibility="@{viewModel.canEdit}"
                    android:layout_marginTop="18dp"
                    app:cardElevation="0dp"
                    style="@style/RoundCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_change_password"
                            app:cardElevation="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_margin="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <ImageView
                                    android:layout_margin="8dp"
                                    android:scaleType="centerInside"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:src="@drawable/icon_password"/>
                                <TextView
                                    android:textAlignment="center"
                                    android:text="Change password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_change_pattern"
                            app:cardElevation="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_margin="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <ImageView
                                    android:layout_margin="8dp"
                                    android:scaleType="centerInside"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:src="@drawable/icon_pattern"/>
                                <TextView
                                    android:textAlignment="center"
                                    android:text="Change pattern"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_edit_account_info"
                            app:cardElevation="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_margin="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <ImageView
                                    android:layout_margin="8dp"
                                    android:scaleType="centerInside"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:src="@drawable/icon_edit"/>
                                <TextView
                                    android:text="Edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_edit_delete"
                            app:cardElevation="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_margin="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <ImageView
                                    android:layout_margin="8dp"
                                    android:scaleType="centerInside"
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:src="@drawable/icon_delete"/>
                                <TextView
                                    android:text="Delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>