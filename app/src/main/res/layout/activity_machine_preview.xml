<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".app.machines.preview.MachinePreviewActivity">
    <data>
        <variable
            name="viewModel"
            type="com.vag.lmsapp.app.machines.preview.MachinePreviewViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="@{viewModel.machine != null}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="16dp"
                style="@style/LinearLayoutDivider5.Center"
                app:layout_scrollFlags="scroll|enterAlways">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_edit"
                    style="@style/RoundCard.NoElevation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/LinearLayoutDivider5.Center"
                        android:layout_margin="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_edit"/>
                        <TextView
                            android:text="@string/edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:layout_height="18dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_ping"
                    style="@style/RoundCard.NoElevation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/LinearLayoutDivider5.Center"
                        android:layout_margin="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_ping"/>
                        <TextView
                            android:text="Ping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="1dp"
                    android:layout_height="18dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_delete"
                    style="@style/RoundCard.NoElevation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/LinearLayoutDivider5.Center"
                        android:layout_margin="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_delete"/>
                        <TextView
                            android:text="@string/delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                app:title="@{viewModel.title}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:menu="@menu/menu_machine_preview">
<!--                <ImageView-->
<!--                    android:layout_width="15dp"-->
<!--                    android:layout_height="15dp"-->
<!--                    android:layout_marginStart="16dp"-->
<!--                    android:src="@drawable/icon_dropdown"/>-->
            </androidx.appcompat.widget.Toolbar>
            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/color_code_payments"
                android:id="@+id/statusBar"
                app:cardCornerRadius="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/text_result_count"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:textColor="@color/black"
                    android:text="@{`Showing total of : ` + viewModel.resultCount.filtered + ` item(s) out of ` + viewModel.resultCount.total}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Total page"/>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:paddingTop="16dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>