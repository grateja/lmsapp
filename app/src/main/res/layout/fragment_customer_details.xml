<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.customers.preview.CustomerDetailsFragment">
    <data>
        <variable
            name="viewModel"
            type="com.vag.lmsapp.app.customers.preview.CustomerPreviewViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/incl_customer_details"
            layout="@layout/incl_customer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:viewModel="@{viewModel.customer}"/>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_5"
            android:showDividers="middle"
            android:gravity="end|center_vertical"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_email">
            <ImageView
                android:id="@+id/icon_warning"
                android:visibility="@{!viewModel.canCreateJobOrder}"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_warning"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/button_create_new_job_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">
                <FrameLayout
                    android:background="@drawable/dotted_stroke_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:divider="@drawable/divider_10"
                        android:showDividers="middle">
                        <ImageView
                            android:src="@drawable/icon_add_green"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TextView
                            style="@style/Bold"
                            android:textColor="@color/green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Create new job order"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
            <View android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/button_card_edit"
                style="@style/ButtonCard.Margin8"
                android:layout_width="70dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/LinearLayoutDivider5.Center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_edit"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>
</layout>